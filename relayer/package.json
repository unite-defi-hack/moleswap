{
  "name": "moleswap-relayer",
  "version": "1.0.0",
  "description": "Cross-chain atomic swap relayer for MoleSwap protocol",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/src/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate": "knex migrate:latest",
    "migrate:make": "knex migrate:make",
    "seed": "knex seed:run",
    "send-order": "ts-node scripts/send-order-to-relayer.ts",
    "cleanup-db": "ts-node scripts/cleanup-db.ts"
  },
  "keywords": [
    "defi",
    "atomic-swap",
    "cross-chain",
    "relayer"
  ],
  "author": "MoleSwap Team",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "ethers": "^6.8.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "knex": "^3.0.1",
    "sqlite3": "^5.1.6",
    "winston": "^3.11.0",
    "@1inch/cross-chain-sdk": "file:../1inch-cross-chain-sdk",
    "@1inch/limit-order-sdk": "^4.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.2"
  }
}
